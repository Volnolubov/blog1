<div class="animated bounceInLeft"><h1 class="h1_title"><%= t('.title') %></h1></div>

<div class="buttons_panel">
	<%= link_to t('.new_category'), new_admin_category_path, class: 'btn-info-cat' %>
</div>

<section id="categories">
 <table class="table">
 	<thead>
 		<tr>
 			<th scope="col">#</th>
 			<th scope="col"><%= t('.name') %></th>
 			<th scope="col"><%= t('.cat_parent') %></th>
 			<th scope="col"></th>
 		</tr>
 	</thead>
 		<tbody>
 			<% @categories.each_with_index do |category, index| %>
 			<tr>
 				<td><%= index + 1 %></td>
 				<td><%= category.name %></td>
 				<td><%= category.parent.name if category.parent.present? %></td>
 				<td>
 					<%= link_to t('.edit'), edit_admin_category_path(category), class: 'btn-warning-cat' %>
 					<%=link_to t('.delete'), admin_category_path(category),  method: :delete,  data: { confirm: t('.qwestchion') }, class: 'btn-danger-cat' %>
 				</td>
 			</tr>
 			<% end %>
 		</tbody>
  </table>

 </section>